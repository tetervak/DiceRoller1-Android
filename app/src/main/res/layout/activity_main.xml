<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/roll_dice_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_margin"
            android:text="@string/roll_the_dice"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/pink_500" />

        <LinearLayout
            android:id="@+id/die_images_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/die1_image_view"
                android:layout_width="80dp"
                android:layout_height="60dp"
                tools:srcCompat="@drawable/dice_1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/die2_image_view"
                android:layout_width="80dp"
                android:layout_height="60dp"
                tools:srcCompat="@drawable/dice_2"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/die3_image_view"
                android:layout_width="80dp"
                android:layout_height="60dp"
                tools:srcCompat="@drawable/dice_3"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/die_values_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/die1_text_view"
                tools:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/deep_purple_500" />

            <TextView
                android:id="@+id/die2_text_view"
                tools:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/deep_purple_500" />

            <TextView
                android:id="@+id/die3_text_view"
                tools:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/deep_purple_500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:id="@+id/total_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/green_500"
                tools:ignore="TextContrastCheck"
                tools:text="6" />

        </LinearLayout>

        <Button
            android:id="@+id/roll_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/roll_the_dice"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/reset_button_label" />

    </LinearLayout>

</ScrollView>